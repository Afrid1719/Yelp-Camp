<%- include('./layouts/navbar') %>

<div class="container mt-5">
    <h1 class="text-center my-4">Sign Up</h1>
    <form action="/register" method="post">
        <div class="form-group w-25 mx-auto">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control">
        </div>
        <div class="form-group w-25 mx-auto">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control">
        </div>

        <button type="submit" class="btn btn-success d-block mx-auto">Sign Up</button>
    </form>
    <a class="d-block text-center text-success mt-3" href="/login">Already have an account? Login then</a>
</div>

<%-include('./layouts/footer')%>