<%- include('./layouts/navbar') %>

<link rel="stylesheet" href="/css/campground.css">
<div class="container my-3">
    <div class="clearfix">
        <h2 class="float-left"><%= campground.name %></h2>
        <div class="float-right action-buttons">
            <a href="<%= `/campgrounds/${campground._id}/edit` %>" class="btn btn-outline-success">Edit</a>
            <form action="<%= `/campgrounds/${campground._id}?_method=DELETE` %>" method="post" class="d-inline">
                <button class="btn btn-outline-danger" type="submit">Delete</button>
            </form>
        </div>
    </div>
    <p class="description"><%- campground.description %></p>
    <div class="row">
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="img-thumbnail">
                <img src="<%= campground.image %>" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <form action="<%= `/campgrounds/${campground._id}/comments` %>" method="post">
        <div class="form-row">
            <div class="form-group col-md-8 col-12">
                <textarea class="form-control" id="comment" name="comment" rows="2" cols="10" required></textarea>
            </div>
            <div class="col-md-4 col-4">
                <button type="submit" class="btn btn-success">Comment</button>
            </div>
        </div>
    </form>
</div>

<div class="container comments">
    <% campground.comments.forEach(comment){ %>
        <p><%= comment.text %></p>    
    <% } %>
</div>
<%-include('./layouts/footer')%>