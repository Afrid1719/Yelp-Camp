<%- include('./header') %>

<link rel="stylesheet" href="/css/navbar.css">
<nav class="navbar sticky-top navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="/">YelpCamp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/campgrounds">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/campgrounds/gallery">Gallery</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/campgrounds/new">Add Campground</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">About</a>
            </li>
        </ul>
        <ul class="navbar-nav navbar-right">
            <% if(user){ %>
                <li class="nav-item">
                    <a class="nav-link">You are logged in, as <span class="text-capitalize"><%= user.username%></span></a>
                </li>
                 <li class="nav-item">
                    <form action="/logout" class="form-inline" method="post">
                        <button class="btn btn-success" type="submit">Logout</button>
                    </form>
                 </li>
            <% } else { %>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Sign Up</a>
                </li>
            <% } %>
        </ul>
    </div>
</nav>

<div class="container my-3">
    <% if(success && success.length > 0){ %>
        <div class="alert alert-dismissable alert-success" role="alert">
            <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } else if(error && error.length > 0){ %>
        <div class="alert alert-dismissable alert-danger" role="alert">
            <%= error %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } else if(warning && warning.length > 0){ %>
        <div class="alert alert-dismissable alert-warning" role="alert">
            <%= warning %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } else if(info && info.length > 0){ %>
        <div class="alert alert-dismissable alert-info" role="alert">
            <%= info %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
</div>
