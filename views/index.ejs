<%- include('./layouts/navbar') %>

<div class="container-md jumbotron">
    <h1>Welcome to YelpCamp</h1>
    <h6>Here you can find best campsites around the globe</h6>
    <a href="/campgrounds/new" class="btn btn-success mt-4">Add New Campground</a>
</div>

<div class="container search-bar clearfix">
    <form class="form-inline float-md-right my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>

<div class="container">
    <div class="row pb-4">
        <% data.forEach(function(camp){ %>
        <div class="col-md-6 col-lg-4 mt-4">
            <div class="card">
                <img src="<%= camp.image %>" alt="" class="img-fluid card-img-top" style="max-height: 260px">
                <div class="card-body text-center">
                    <h4 class="card-text"><%= camp.name %></h4>
                    <a href="<%= `/campgrounds/${camp.id}` %>" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<%-include('./layouts/footer')%>