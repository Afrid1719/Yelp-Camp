<%- include('../layouts/navbar') %>

<link rel="stylesheet" href="/css/form.css">

<div class="container mt-3 p-5">
    <h1 class="form-heading">Add New Campground</h1>
    <form action="/campgrounds" method="post">
        <div class="form-group">
            <label for="name">Campground Name</label>
            <input type="text" class="form-control" id="name" name="camp[name]" required> 
        </div>

        <div class="form-group">
            <label for="image">Campground Image URL</label>
            <input type="url" class="form-control" id="image" name="camp[image]" required> 
        </div>
        
        <div class="form-group">
            <label for="price">Campground Price per Night</label>
            <input type="number" class="form-control" id="price" name="camp[price]" min="0.01" step="0.01" required> 
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="camp[description]" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-success">Add</button>

        <a class="text-center text-success back-link" href="/campgrounds">Go Back</a>
    </form>
</div>

<%-include('../layouts/footer')%>